extends modules/layout
block body
  - landingPage = true;
  //wrapper starts
  #wrapper.main-page.landing
    //header starts
    include modules/header
    //header ends
    //main starts
    #main
      section.content-section.text-center.description-info
        .container
          h1.text-center.gray We are creating a new website for you
          p
            | For details enquiries please contact our customer services line for assistant 
            a(href="tel:92590900") 9259 0900 
            | or email 
            a(href="mailto:josephine.jones@colliers.com") josephine.jones@colliers.com
          p For retailer contact numbers please see below
      section.content-section.dark-scheme.top-indent#about
        .container
          h1.text-center.white About MetCentre
          .contacts
            .grid-row
              .grid-col-lg-8
                .map-box
                  #map.map-holder(data-name="map" data-has-template)
                  .search-box
                    .grid-row
                      .grid-col-md-3
                        button.btn.large.white.small(type="button").home-location.full-width
                          span Your Location
                      .grid-col-md-1.text-center
                        span.or or
                      .grid-col-md-4
                        input(type="text" placeholder="Enter your address" class="search-input")
                      .grid-col-md-2
                        button.btn.large.white.small(type="button").search.full-width
                          span Search
                      .grid-col-md-2
                        button.btn.large.white.small(type="button").clear.full-width
                          span Clear
                  span.message-box Sorry, you are too far away from the desired object or we can't build the route.
                  #direction-panel.direction-panel
                    a.btn-close(href="#") Close
              .grid-col-lg-4
                .frame
                  .grid-row
                    .grid-col-xs-12.grid-col-sm-6.grid-col-lg-12
                      h2.white.middle Trading Hours
                      dl.definition-list.fixed-term-width
                        dt Monday–Friday
                        dd 8am-6pm
                        dt Thursday
                        dd 8am–8pm
                      h2.white.middle Woolworths
                      dl.definition-list.fixed-term-width
                        dt Monday–Friday
                        dd 6am–8pm
                      h2.white.middle Max Brenner
                      dl.definition-list.fixed-term-width
                        dt Monday–Thursday
                        dd 7.30am–11pm
                        dt Friday
                        dd 7.30am–12am
                        dt Saturday
                        dd 9am–12am
                        dt Sunday
                        dd 9am–11pm
                    .grid-col-xs-12.grid-col-sm-6.grid-col-lg-12
                      h2.white.middle Contact Details
                      dl.definition-list.with-line-break
                        dt Address
                        dd
                          address Corner of George and Margaret Streets, Sydney.
                        dt Phone
                        dd 02 9259 0900
      section.stores-section.content-section.dark-gray-scheme.loading#stores(data-name="stores", data-has-template, data-stores-list)
        .container.container-wide.is-hidden-while-loading
          .grid-row
            .grid-col-lxl-2.grid-col-xl-3.grid-col-lg-4.grid-col-md-4(v-repeat="stores")
              .block.block--white(class="{{className}}", v-repeat="group")
                h3 {{name}}
                ul.data-list
                  li(v-repeat="item in items")
                    span.badge {{item.data.mapStoreId}}
                    .holder
                        span.name {{item.title}}
                        span.phone {{item.data.phone}}
    //main ends
  //wrapper ends