extends modules/layout
block body
  - mainPage = true;
  //wrapper starts
  #wrapper.main-page
    //header starts
    include modules/header
    //header ends
    //main starts
    #main
      section.content-section
        .container
          h1.text-center
            a(href="news-events.html") News and Events
          .gallery#news.loading(data-name="news" data-has-template, data-has-scroll-gallery)
            .holder.is-hidden-while-loading
              ul.slider
                li(v-repeat="news.subChannel.feedItem")
                  article.block.block--white.b-shadow.small-bottom-indent(v-if="data.hasLongform != 1")
                    figure.media
                      <div class="wistia_embed popover=true popoverAnimateThumbnail=true" data-image-id="{{data.videoUrl}}">&nbsp;</div>
                      figcaption.caption
                        h2.small.orange {{data.title}}
                        p {{data.body}}
                  a(href="article-page.html?{{data.longformId}}" v-else)
                    article.block.block--white.b-shadow.small-bottom-indent
                      figure.media
                        img(data-src="{{data.landscapeImageUrl}}" width="460" height="260" alt="{{data.title}}" src="#")
                        figcaption.caption
                          h2.small.orange {{data.title}}
                          p {{data.body}}
                      .btn-holder.text-center
                        span.btn.orange Read More
            .pagination
      section.content-section.store-section.dark-gray-scheme#map-section.hidden.lg-visible
        .container
          h1.text-center
            a(href="store-directory-map-view.html") Store Finder
          h2.accessibility Map information
          h3.accessibility Add map information
        .map.light
          .mapplic#mapplic(data-name="mapplic", data-has-template)
      section.content-section.dark-scheme.top-indent#about
        .container
          h1.text-center.white
            a(href="centre-info.html") About MetCentre
          .contacts
            .grid-row
              .grid-col-lg-8
                .map-box
                  #map.map-holder.loading(data-name="map" data-has-template)
                  .search-box
                    .grid-row
                      .grid-col-md-3
                        button.btn.large.white.small(type="button").home-location.full-width
                          span Your Location
                      .grid-col-md-1.text-center
                        span.or or
                      .grid-col-md-4
                        input(type="text" placeholder="Enter your address" class="search-input")
                      .grid-col-md-2
                        button.btn.large.white.small(type="button").search.full-width
                          span Search
                      .grid-col-md-2
                        button.btn.large.white.small(type="button").clear.full-width
                          span Clear
                  span.message-box Sorry, you are too far away from the desired object or we can't build the route. Please try once again.
                  #direction-panel.direction-panel
                    a.btn-close(href="#") Close
              .grid-col-lg-4
                .frame
                  .grid-row
                    .grid-col-xs-12.grid-col-sm-6.grid-col-lg-12
                      a(href="centre-info.html")
                        h2.white.middle Trading Hours
                        dl.definition-list.fixed-term-width
                          dt Monday–Friday
                          dd 8am-6pm
                          dt Thursday
                          dd 8am–8pm
                        h2.white.middle Woolworths
                        dl.definition-list.fixed-term-width
                          dt Monday–Friday
                          dd 6am–8pm
                        h2.white.middle Max Brenner
                        dl.definition-list.fixed-term-width
                          dt Monday–Thursday
                          dd 7.30am–11pm
                          dt Friday
                          dd 7.30am–12am
                          dt Saturday
                          dd 9am–12am
                          dt Sunday
                          dd 9am–11pm
                    .grid-col-xs-12.grid-col-sm-6.grid-col-lg-12
                      a(href="centre-info.html")
                        h2.white.middle Contact Details
                        dl.definition-list.with-line-break
                          dt Address
                          dd
                            address Corner of George and Margaret Streets, Sydney.
                          dt Phone
                          dd 02 9259 0900
    //main ends
  //wrapper ends
  //footer starts
  include modules/footer
  //footer ends